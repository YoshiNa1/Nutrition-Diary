                                                           <Grid.ColumnDefinitions>
                                                               <ColumnDefinition Width="16" />
                                                               <ColumnDefinition Width="*" />
                                                               <ColumnDefinition Width="16" />
                                                           </Grid.ColumnDefinitions>


                                                        <gauge:SfCircularGauge
                                                            Grid.Row="1"
                                                            Grid.Column="1"
                                                            Grid.ColumnSpan="3"
                                                            Margin="0,40"
                                                            BackgroundColor="Transparent"
                                                            HeightRequest="190"
                                                            HorizontalOptions="Center"
                                                            WidthRequest="190">

                                                        <gauge:SfCircularGauge.Headers>
                                                            <gauge:Header
                                                                ForegroundColor="{DynamicResource Gray-White}"
                                                                Position="0.35,0.4"
                                                                Text="{Binding CaloriesConsumed, StringFormat='{0:f0}'}"
                                                                TextSize="22"/>
                                                            <gauge:Header
                                                                ForegroundColor="{DynamicResource Gray-White}"
                                                                Position="0.5,0.4"
                                                                Text="/"
                                                                TextSize="22" />
                                                            <gauge:Header
                                                                ForegroundColor="{DynamicResource Gray-White}"
                                                                Position="0.65,0.4"
                                                                Text="{Binding Result, StringFormat='{0:f0}'}"
                                                                TextSize="22" />
                                                            <gauge:Header
                                                                ForegroundColor="{DynamicResource Gray-White}"
                                                                Position="0.5, 0.55"
                                                                Text="kcal употреблено"
                                                                TextSize="12" />
                                                        </gauge:SfCircularGauge.Headers>

                                                        <gauge:SfCircularGauge.Scales>
                                                            <gauge:Scale
                                                                EndValue="{Binding Result}"
                                                                ShowLabels="False"
                                                                ShowRim="False"
                                                                ShowTicks="False"
                                                                StartAngle="0"
                                                                SweepAngle="360">

                                                                <gauge:Scale.Pointers>
                                                                    <gauge:RangePointer Color="#7cf74c" Value="{Binding CaloriesConsumed}" Thickness="10"/>
                                                                </gauge:Scale.Pointers>
                                                            </gauge:Scale>
                                                        </gauge:SfCircularGauge.Scales>

                                                       </gauge:SfCircularGauge>
                                                           </Grid>
                                                           </DataTemplate>
                                                       </CollectionView.ItemTemplate>
                                                   </CollectionView>



